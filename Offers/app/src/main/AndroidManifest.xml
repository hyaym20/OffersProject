<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.offers">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OldUserPage"
            android:label="Offers"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".AdminPage"
            android:label="Offers"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".DemoUserPAge"
            android:label="Offers"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".Data.SearchByItem">
            android:label="Search"
            android:parentActivityName=".UserPage"
        </activity>
    </application>

    <activity
        android:name=".UserPage"
        android:label="Offers"
        android:parentActivityName=".LoginActivity"/>

</application>

</manifest>